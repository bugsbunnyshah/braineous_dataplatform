{
  "pipeId": "staging_pipe",
  "entity": "staged_data",
  "configuration": [
    {
      "stagingStore" : "com.appgallabs.dataplatform.targetSystem.framework.staging.InMemoryStorage",
      "storeDriver" : "com.appgallabs.dataplatform.targetSystem.core.driver.MongoDBStoreDriver",
      "name": "staging_pipe_store_mongodb",
      "config": {
        "connectionString": "mongodb://localhost:27017",
        "database": "staging_pipe_store",
        "collection": "staging_area",
        "jsonpathExpressions": [
          "$.store.book[?(@.price >20)]",
          "$.store.bicycle",
          "$.expensive"
        ]
      }
    }
  ]
}